<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro"  name="robot">

    <xacro:include filename="inertial_macros.xacro"/>

    <material name="white">
        <color rgba="1 1 1 1" />
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1" />
    </material>

    <material name="blue">
        <color rgba="0.2 0.2 1 1" />
    </material>

    <material name="black">
        <color rgba="0 0 0 1" />
    </material>  

    <material name="red">
        <color rgba="1 0 0 1" />
    </material>  


    <!--Base link-->

    <link name="base_link">

    </link>

    <!--Chassis Link  -->

    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis_link"/>
        <origin xyz="-0.3 0 0"/>
    </joint>


    <link name="chassis_link">
        <visual>
            <origin xyz="0.3 0 0.1"/>
            <geometry>
                <box size="0.6 0.6 0.2"/>
            </geometry>
            <material name="white"/>
        </visual>

        <collision>
            <origin xyz="0.3 0 0.1"/>
            <geometry>
                <box size="0.6 0.6 0.2"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="5" x="0.6" y="0.6" z="0.2">
            <origin xyz="0.3 0 0.1" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

    <gazebo reference="chassis_link">
        <material>Gazebo/White</material>
    </gazebo>

    <!--FRONT LEFT WHEEL LINK -->

    <joint name="left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <origin xyz="0.15 0.3275 0" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 -1"/>
    </joint>

    <link name="left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.10" length="0.055"/>
            </geometry>
            <material name="blue"/>
        </visual>

        <collision>
            <geometry>
                <cylinder radius="0.10" length="0.055"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="3" radius="0.10" length="0.055">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="left_wheel">
        <material>Gazebo/Blue</material>
    </gazebo>

    <!--FRONT RIGHT WHEEL LINK -->

    <joint name="right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <origin xyz="0.15 -0.3275 0" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.10" length="0.055"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.10" length="0.055"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="3" radius="0.10" length="0.055">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="right_wheel">
        <material>Gazebo/Blue</material>
    </gazebo>

    <!--LEFT CASTER WHEEL LINK -->

    <joint name="left_caster_wheel_joint" type="fixed">
        <parent link="chassis_link"/>
        <child link="left_caster_wheel"/>
        <origin xyz="0.1 -0.20 0"/>
    </joint>


    <link name="left_caster_wheel">
        <visual>
            <geometry>
                <sphere radius="0.1"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.1"/>
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="2" radius="0.1">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_sphere>
    </link>

    <gazebo reference="left_caster_wheel">
        <material>Gazebo/Black</material>
        <mu1 value="0.000001"/>
        <mu2 value="0.000001"/>
    </gazebo>


    <!--RIGHT CASTER WHEEL LINK -->

    <joint name="right_caster_wheel_joint" type="fixed">
        <parent link="chassis_link"/>
        <child link="right_caster_wheel"/>
        <origin xyz="0.1 0.20 0"/>
    </joint>


    <link name="right_caster_wheel">
        <visual>
            <geometry>
                <sphere radius="0.1"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.1"/>
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="2" radius="0.1">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_sphere>
    </link>

    <gazebo reference="right_caster_wheel">
        <material>Gazebo/Black</material>
        <mu1 value="0.000001"/>
        <mu2 value="0.000001"/>
    </gazebo>

</robot>